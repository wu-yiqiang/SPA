<UserControl x:Class="spa.Controls.DropdownLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:spa.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="14 0 14 0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" VerticalAlignment="Center" Content="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <ComboBox ItemsSource="{Binding ItemsSource,RelativeSource={RelativeSource AncestorType=UserControl}}" SelectedValue="{Binding SelectedValue, RelativeSource={RelativeSource AncestorType=UserControl}}"
        Grid.Column="1" VerticalAlignment="Center" DisplayMemberPath="Name" SelectedValuePath="Id"  />
    </Grid>
</UserControl>
