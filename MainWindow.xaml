<Window x:Class="spa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:spa.Controls"
        Title="SPA" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
                <Grid Margin="14 0 14 0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <RichTextBox  />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  />
                                <ColumnDefinition  />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition  Width="60" />
                            </Grid.ColumnDefinitions>
                            <local:DropdownLabel Label="模式"
                             ItemsSource="{Binding ModeOptions}"
                              />
                            <Grid Margin="14 0 14 0" Grid.Column="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" VerticalAlignment="Center"
Content="编码" />
                                <ComboBox Grid.Column="1" VerticalAlignment="Center"
SelectedIndex="0">
                                    <ComboBoxItem Content="UTF-8" />
                                    <ComboBoxItem Content="UTF-16" />
                                </ComboBox>
                            </Grid>
                            <Button Grid.Column="2" Content="保存" Style="{DynamicResource AccentButtonStyle}" />
                            <Button Grid.Column="3" Content="清空" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <RichTextBox />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  />
                                <ColumnDefinition  />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition  Width="60" />
                            </Grid.ColumnDefinitions>
                            <Grid Margin="14 0 14 0" Grid.Column="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" VerticalAlignment="Center"
Content="模式" />
                                <ComboBox Grid.Column="1" VerticalAlignment="Center"
SelectedIndex="0">
                                    <ComboBoxItem Content="HEX" />
                                    <ComboBoxItem Content="HEX2" />
                                </ComboBox>
                            </Grid>
                            <Grid Margin="14 0 14 0" Grid.Column="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" VerticalAlignment="Center"
Content="编码" />
                                <ComboBox Grid.Column="1" VerticalAlignment="Center"
SelectedIndex="0">
                                    <ComboBoxItem Content="UTF-8" />
                                    <ComboBoxItem Content="UTF-16" />
                                </ComboBox>
                            </Grid>
                            <Button Grid.Column="2" Content="保存" Style="{DynamicResource AccentButtonStyle}" />
                            <Button Grid.Column="3" Content="清空" />
                        </Grid>
                    </Grid>
                </Grid>
            </DockPanel>
            <DockPanel  Grid.Column="1" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>
                    <Grid Width="220">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" VerticalAlignment="Center"
 Content="串口号" />
                            <ComboBox Grid.Column="1" VerticalAlignment="Center"
 SelectedIndex="0">
                                <ComboBoxItem Content="COM1" />
                                <ComboBoxItem Content="COM2" />
                                <ComboBoxItem Content="COM3" />
                            </ComboBox>
                        </Grid>
                        <Grid Grid.Row="1"  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" VerticalAlignment="Center"
Content="波特率" />
                            <ComboBox Grid.Column="1" VerticalAlignment="Center"
SelectedIndex="0">
                                <ComboBoxItem Content="3700" />
                                <ComboBoxItem Content="900" />
                            </ComboBox>
                        </Grid>
                        <Grid Grid.Row="2"  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" VerticalAlignment="Center"
Content="校验位" />
                            <ComboBox Grid.Column="1" VerticalAlignment="Center"
SelectedIndex="0">
                                <ComboBoxItem Content="NONE" />
                                <ComboBoxItem Content="EVEN" />
                            </ComboBox>
                        </Grid>
                        <Grid Grid.Row="3"  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" VerticalAlignment="Center"
Content="数据位" />
                            <ComboBox Grid.Column="1" VerticalAlignment="Center"
SelectedIndex="0">
                                <ComboBoxItem Content="8" />
                                <ComboBoxItem Content="16" />
                            </ComboBox>
                        </Grid>
                        <Grid Grid.Row="4"  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" VerticalAlignment="Center"
Content="停止位" />
                            <ComboBox Grid.Column="1" VerticalAlignment="Center"
SelectedIndex="0">
                                <ComboBoxItem Content="1" />
                                <ComboBoxItem Content="0" />
                            </ComboBox>
                        </Grid>
                    </Grid>
                    <Button Grid.Row="1" Width="220" HorizontalAlignment="Center" Style="{DynamicResource AccentButtonStyle}" Content="打开串口"/>
                </Grid>
            </DockPanel>
        </Grid>

    </Grid>
</Window>
